{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "ApiHostUri": "http://127.0.0.1:8000"
  },
  "ChatbotSettings": {
    "ShowInputMessageAtBottom": true,
    "ShowOngoingMessageInConversation": true,
    "ShowEmptyOngoingMessageInConversation": true,
    "DoLoginOnStartup": false,
    "DisplayDurationInSecondsOfErrorNotification": 10
  }
}
