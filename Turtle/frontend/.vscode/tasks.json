{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "npm",
      "script": "dev",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE v",
          "endsPattern": "^\\s*âžœ\\s*Local:\\s*http://localhost:"
        }
      },
      "options": {
        "env": {
          "NODE_OPTIONS": ""
        }
      }
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "npx",
      "args": ["vite", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "env": {
          "NODE_OPTIONS": "",
          "VITE_API_URL": "http://localhost:8000",
          "NODE_ENV": "production"
        }
      }
    },
    {
      "label": "Type Check",
      "type": "shell", 
      "command": "npx",
      "args": ["tsc", "--noEmit"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "env": {
          "NODE_OPTIONS": ""
        }
      }
    },
    {
      "label": "Preview Production Build",
      "type": "npm",
      "script": "preview", 
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "Build Production"
    }
  ]
}