# Turtle Trading Frontend Environment Configuration
# Copy this file to .env.local for local development

# API Configuration
# Backend API base URL
VITE_API_URL=http://localhost:8000

# WebSocket Configuration
# Backend WebSocket URL for real-time data
VITE_WS_URL=ws://localhost:8000

# Application Configuration
# Environment mode
NODE_ENV=development

# Port for development server (optional, defaults to 3000)
# VITE_DEV_PORT=3000

# Authentication Configuration
# JWT token expiration time (in hours)
# VITE_AUTH_TOKEN_EXPIRY=24

# Chart Configuration
# Default chart refresh interval (in milliseconds)
# VITE_CHART_REFRESH_INTERVAL=5000

# Trading Configuration
# Maximum number of concurrent trades
# VITE_MAX_CONCURRENT_TRADES=10

# Logging Configuration
# Enable debug logging in development
# VITE_DEBUG_LOGGING=true

# For production deployment:
# VITE_API_URL=https://your-production-api.com
# VITE_WS_URL=wss://your-production-api.com
# NODE_ENV=production